.detail_page .detail_page_view {
  height: calc(100vh - 100rpx);
}

.detail_page .detail_page_view .detail_swiper swiper {
  height: 45vh;
  position: relative;
  /*  */
}

.detail_page .detail_page_view .detail_swiper swiper .detail_img {
  width: 45%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.detail_page .detail_page_view .detail_price .price {
  margin: 20rpx 0 0 20rpx;
  color: red;
  font-weight: bold;
}

.detail_page .detail_page_view .detail_price .detail {
  height: 150rpx;
  margin-top: 25rpx;
  display: flex;
  padding: 14rpx;
  border: 1px dashed gainsboro;
}

.detail_page .detail_page_view .detail_price .detail .leftDetail {
  flex: 6;
  line-height: 30rpx;
  border-right: 1px dashed gainsboro;
}

.detail_page .detail_page_view .detail_price .detail .leftDetail .leftDetail_title {
  padding: 20rpx;
  font-size: 30rpx;
}

.detail_page .detail_page_view .detail_price .detail .leftDetail .leftDetail_content {
  padding: 0 0 20rpx 20rpx;
  font-size: 24rpx;
}

.detail_page .detail_page_view .detail_price .detail .rightDetail {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
}

.detail_page .detail_page_view .detail_price .detail .rightDetail .img_content {
  padding: 14rpx;
  color: red;
}

.detail_page .detail_page_view .detail_price .detail .rightDetail .img_content image {
  width: 36rpx;
}

.detail_page .detail_page_view .size_select {
  display: flex;
  padding: 20rpx;
  justify-content: space-between;
  font-size: 24rpx;
  border-bottom: 1rpx dashed gainsboro;
}

.detail_page .detail_page_view .size_select .size_select_left {
  display: flex;
}

.detail_page .detail_page_view .size_select .size_select_left .size_select_text {
  text-align: center;
  margin-left: 16rpx;
}

.detail_page .detail_page_view .size_select:active {
  background-color: rgba(222, 209, 209, 0.208);
}

.detail_page .detail_page_view .img_detail .detail_title {
  padding: 60rpx;
  font-size: larger;
  color: #8a8585;
  text-align: center;
}

.detail_page .detail_page_view .img_detail .detail_all {
  border-top: 5rpx solid #8a8585;
}

.detail_page .buy_buttonGroup {
  height: 100rpx;
  display: flex;
  border-top: 1rpx solid #ccc;
}

.detail_page .buy_buttonGroup .kefu,
.detail_page .buy_buttonGroup .share,
.detail_page .buy_buttonGroup .shopcar {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  font-size: 24rpx;
  position: relative;
}

.detail_page .buy_buttonGroup .kefu button,
.detail_page .buy_buttonGroup .share button,
.detail_page .buy_buttonGroup .shopcar button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.detail_page .buy_buttonGroup .addShopcar,
.detail_page .buy_buttonGroup .buyNow {
  flex: 2;
  text-align: center;
  line-height: 100rpx;
  font-weight: bold;
  color: white;
}

.detail_page .buy_buttonGroup .addShopcar {
  background-color: orange;
}

.detail_page .buy_buttonGroup .buyNow {
  background-color: red;
}

.user_page .user_head {
  margin: 16rpx;
  height: 240rpx;
  background-color: #4b7e6d;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
}

.user_page .user_head .user_head_pic {
  margin: 0 4rpx 0 20rpx;
}

.user_page .user_head .user_head_pic .user_pic {
  width: 180rpx;
}

.user_page .user_head .user_detail_denglu {
  display: flex;
  color: white;
  width: 100%;
  height: 100%;
  align-items: center;
  padding: 30rpx;
}

.user_page .user_head .user_detail {
  color: white;
}

.user_page .user_head .user_detail view {
  margin-bottom: 14rpx;
}

.user_page .user_section {
  padding: 14rpx 40rpx 40rpx 40rpx;
}

.user_page .user_section .user_section_li {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid gainsboro;
}

.user_page .user_section .user_section_li:active {
  background-color: aliceblue;
}

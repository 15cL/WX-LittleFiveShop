.cart_page {
  background-color: #f8f8f8;
  padding-top: 30rpx;
  height: 100vh;
}

.cart_page .cart_tip {
  margin-top: 200rpx;
  text-align: center;
}

.cart_page .cart_tip image {
  border-radius: 500rpx;
}

.cart_page .cart_tip view {
  margin-top: 20rpx;
  color: #dbd7d7;
}

.cart_page .cart_page_content {
  height: calc(100vh - 150rpx);
}

.cart_page .cart_page_content .cart_page_info {
  display: flex;
  padding: 20rpx;
  margin: 20rpx 20rpx;
  border-radius: 10rpx;
  background-color: white;
}

.cart_page .cart_page_content .cart_page_info .cart_checkbox {
  flex: 1;
  position: relative;
}

.cart_page .cart_page_content .cart_page_info .cart_checkbox checkbox-group {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.cart_page .cart_page_content .cart_page_info .cart_img {
  width: 200rpx;
}

.cart_page .cart_page_content .cart_page_info .cart_page_text {
  flex: 4;
  padding: 18rpx;
}

.cart_page .cart_page_content .cart_page_info .cart_page_text .text_up {
  height: 70%;
}

.cart_page .cart_page_content .cart_page_info .cart_page_text .text_under {
  display: flex;
  justify-content: space-between;
}

.cart_page .cart_page_content .cart_page_info .cart_page_text .text_under .edNum_grp {
  display: flex;
}

.cart_page .cart_page_content .cart_page_info .cart_page_text .text_under .edNum_grp .edNum_btn {
  height: 44rpx;
  width: 44rpx;
  line-height: 44rpx;
  text-align: center;
  background-color: #fafafa;
  margin: 0 5rpx;
}

.cart_page .cart_page_content .cart_page_info .cart_page_text .text_under .edNum_grp .edNum_act:active {
  box-shadow: 0.1rpx 0.1rpx 3rpx 1rpx rgba(169, 168, 168, 0.3);
}

.cart_page .cart_page_content .cart_page_info .cart_page_text .text_under .edNum_grp input {
  padding: 0 10rpx;
  width: min-content;
}

.cart_page .cart_page_content .cart_page_info .delBtn {
  padding: 30rpx;
  display: flex;
  align-items: center;
  background-color: var(--themeColor);
  color: white;
  border-radius: 20rpx;
}

.cart_page .total_menu {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  height: 130rpx;
  padding: 20rpx;
  background-color: white;
  border-top: 1rpx solid #f8f8f8;
}

.cart_page .total_menu .total_left {
  position: relative;
  width: 30%;
}

.cart_page .total_menu .total_left checkbox-group {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.cart_page .total_menu .total_left checkbox {
  width: 200rpx;
}

.cart_page .total_menu .total_right {
  display: flex;
}

.cart_page .total_menu .total_right .total_num {
  margin-right: 50rpx;
  display: flex;
  align-items: center;
  justify-items: center;
}

.cart_page .total_menu .total_right .total_num .num_outer {
  color: orangered;
  font-size: 36rpx;
}

.cart_page .total_menu .total_right .total_num .num_outer .num_inner {
  font-size: 22rpx;
}

.cart_page .total_menu .total_right button {
  width: 200rpx;
  border-radius: 30rpx;
  background-color: orangered;
  color: white;
  font-weight: 600rpx;
}

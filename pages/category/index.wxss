page {
  height: 100%;
}

.categoryPage {
  height: 100%;
}

.categoryPage .categoryContent {
  margin-top: 3rpx;
  display: flex;
  height: calc(100vh - 81rpx);
}

.categoryPage .categoryContent .leftContent {
  flex: 2;
  border-right: 5rpx dashed gainsboro;
}

.categoryPage .categoryContent .leftContent .leftContent_li {
  display: flex;
  padding: 20rpx;
}

.categoryPage .categoryContent .leftContent .leftContent_li .leftImg {
  margin: 6rpx 0 0 7rpx;
  vertical-align: middle;
  width: 36rpx;
}

.categoryPage .categoryContent .leftContent .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}

.categoryPage .categoryContent .rightContent {
  margin-left: 5rpx;
  height: calc(100vh - 100rpx);
  flex: 5;
}

.categoryPage .categoryContent .rightContent .goods_content {
  margin-top: 20rpx;
}

.categoryPage .categoryContent .rightContent .goods_content .goods_name {
  height: 68rpx;
  text-align: center;
}

.categoryPage .categoryContent .rightContent .goods_content .goods_detail {
  display: flex;
  width: 100%;
  flex-wrap: wrap;
}

.categoryPage .categoryContent .rightContent .goods_content .goods_detail .goods_little {
  padding: 20rpx 10rpx 20rpx 20rpx;
}

.categoryPage .categoryContent .rightContent .goods_content .goods_detail .goods_little .goods_img {
  width: 140rpx;
  height: 140rpx;
}

.categoryPage .categoryContent .rightContent .goods_content .goods_detail .goods_little .goods_title {
  width: 140rpx;
  font-size: 24rpx;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.categoryPage .categoryContent .rightContent .goods_content .goods_detail .goods_No {
  width: 100%;
  height: 300rpx;
  line-height: 300rpx;
  text-align: center;
  color: #ebe6e6;
}
